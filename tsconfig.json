{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "moduleResolution":"node",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": { "@/*": ["src/*"] },
    "target": "esnext",
    "module": "esnext",
    "outDir": "dist",
    "types": ["@sa-mp/node", "@types/node"],
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true
  }
}